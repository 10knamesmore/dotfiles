# focus windows
cmd - h : yabai -m window --focus west  || yabai -m display --focus west
cmd - j : yabai -m window --focus south || yabai -m display --focus south
cmd - k : yabai -m window --focus north || yabai -m display --focus north
cmd - l : yabai -m window --focus east  || yabai -m display --focus east

# move by direction
cmd + shift - h : yabai -m window --warp west
cmd + shift - j : yabai -m window --warp south
cmd + shift - k : yabai -m window --warp north
cmd + shift - l : yabai -m window --warp east

# resize windows
cmd + ctrl - h : yabai -m window --resize right:-50:0   || yabai -m window --resize left:-50:0
cmd + ctrl - j : yabai -m window --resize bottom:0:50   || yabai -m window --resize top:0:50
cmd + ctrl - k : yabai -m window --resize bottom:0:-50  || yabai -m window --resize top:0:-50
cmd + ctrl - l : yabai -m window --resize right:75:0    || yabai -m window --resize left:50:0

# move window to spacea,  不可用因为系统完整性保护未禁用
# spaces都是提前分配了六个,所以这里不做检查
# cmd + shift - 1 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[1] ]] \
#                   && yabai -m window --space $SPACES[1] && yabai -m space --focus $SPACES[1]
cmd + shift - 1 : WINDOW_ID=$(yabai -m query --windows --window | jq '.id'); \
                    SPACE_ID=$(yabai -m query --spaces | jq '.[0].index'); \
                    yabai -m window --space $SPACE_ID && yabai -m space --focus $SPACE_ID && yabai -m window --focus $WINDOW_ID

cmd + shift - 2 : WINDOW_ID=$(yabai -m query --windows --window | jq '.id'); \
                    SPACE_ID=$(yabai -m query --spaces | jq '.[1].index'); \
                    yabai -m window --space $SPACE_ID && yabai -m space --focus $SPACE_ID && yabai -m window --focus $WINDOW_ID

cmd + shift - 3 : WINDOW_ID=$(yabai -m query --windows --window | jq '.id'); \
                    SPACE_ID=$(yabai -m query --spaces | jq '.[2].index'); \
                    yabai -m window --space $SPACE_ID && yabai -m space --focus $SPACE_ID && yabai -m window --focus $WINDOW_ID

cmd + shift - 4 : WINDOW_ID=$(yabai -m query --windows --window | jq '.id'); \
                    SPACE_ID=$(yabai -m query --spaces | jq '.[3].index'); \
                    yabai -m window --space $SPACE_ID && yabai -m space --focus $SPACE_ID && yabai -m window --focus $WINDOW_ID

cmd + shift - 5 : WINDOW_ID=$(yabai -m query --windows --window | jq '.id'); \
                    SPACE_ID=$(yabai -m query --spaces | jq '.[4].index'); \
                    yabai -m window --space $SPACE_ID && yabai -m space --focus $SPACE_ID && yabai -m window --focus $WINDOW_ID

cmd + shift - 6 : WINDOW_ID=$(yabai -m query --windows --window | jq '.id'); \
                    SPACE_ID=$(yabai -m query --spaces | jq '.[5].index'); \
                    yabai -m window --space $SPACE_ID && yabai -m space --focus $SPACE_ID && yabai -m window --focus $WINDOW_ID



cmd + shift - 0 : yabai -m space --balance

# toggle float
alt - v : yabai -m window --toggle float

# toggle fullscreen
# zoom-fullscreen: 占据所有窗口空间, 保留padding
# windowed-fullscreen: 占据全屏, 但不是native全屏
cmd - f : yabai -m window --toggle windowed-fullscreen

# toggle splist
cmd - s : yabai -m window --toggle split

# close window
cmd - d : yabai -m window --close

cmd - q : /Applications/kitty.app/Contents/MacOS/kitty --single-instance -d ~

cmd - e : open -a Finder
