#                   && yabai -m window --space $SPACES[4]

# toggle float
alt - v : yabai -m window --toggle float

# toggle fullscreen
# zoom-fullscreen: 占据所有窗口空间, 保留padding
# windowed-fullscreen: 占据全屏, 但不是native全屏
cmd - f : yabai -m window --toggle windowed-fullscreen

# toggle splist
cmd - s : yabai -m window --toggle split

# close window
cmd - d : yabai -m window --close

cmd - q : /Applications/kitty.app/Contents/MacOS/kitty --single-instance -d ~
